<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rafa.liquidgalaxypoiscontroller.AdminFragment">


    <Button
        android:id="@+id/pois_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/POIs_button"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/tours_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TOURs_button"
        android:layout_toRightOf="@+id/pois_management"/>
    <Button
        android:id="@+id/categories_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categories_button"
        android:layout_toRightOf="@id/tours_management"/>

    <RelativeLayout
        android:id="@+id/management_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pois_management"
        />

        <Button
            android:id="@+id/new_poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_poi"
            android:layout_toRightOf="@+id/categories_management"
            android:visibility="gone"/>
        <Button
            android:id="@+id/new_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_category"
            android:layout_toRightOf="@+id/categories_management"
            android:visibility="gone"/>
        <Button
            android:id="@+id/new_tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_tour"
            android:layout_toRightOf="@+id/categories_management"
            android:visibility="gone"/>

        <Button
            android:id="@+id/new_poi_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_poi_here"
            android:layout_toRightOf="@+id/new_poi"
            android:visibility="gone"/>
        <Button
            android:id="@+id/new_category_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_category_here"
            android:layout_toRightOf="@+id/new_category"
            android:visibility="gone"/>
        <Button
            android:id="@+id/new_tour_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_tour_here"
            android:layout_toRightOf="@+id/new_tour"
            android:visibility="gone"/>

        <Button
            android:id="@+id/admin_logout"
            android:text="LOG OUT"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/import_pois"
            android:text="IMPORT POIs"
            android:textColor="@color/black"
            android:background="@color/sunshine_dark_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>


    <!--<TableLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->
        <!--android:-->
        <!--</TableLayout>-->


</RelativeLayout>