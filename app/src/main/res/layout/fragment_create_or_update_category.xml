<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rafa.liquidgalaxypoiscontroller.CreateItemFragment">

    <TextView
        android:id="@+id/new_category_text"
        android:text="@string/new_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:hint="Name"
        android:layout_below="@+id/new_category_text"/>
    <EditText
        android:id="@+id/category_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:hint="Hide (Y/N)"
        android:layout_below="@id/category_name"/>
    <Spinner
        android:id="@+id/father_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="200dp"
        android:layout_toRightOf = "@+id/category_name"
        android:layout_below="@id/new_category_text"/>
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_check_white_24dp"
        android:id="@+id/create_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/create_category"
        android:layout_toLeftOf="@+id/cancel_come_back"
        app:backgroundTint="@color/green"/>
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_check_white_24dp"
        android:id="@+id/update_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/update_category"
        app:backgroundTint="@color/green"
        android:layout_toLeftOf="@+id/cancel_come_back"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_close_white_24dp"
        android:id="@+id/cancel_come_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:backgroundTint="@color/red"
        android:text="@string/cancel"/>


</RelativeLayout>
