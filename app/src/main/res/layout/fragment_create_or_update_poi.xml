<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rafa.liquidgalaxypoiscontroller.CreateItemFragment">

    <TextView
        android:id="@+id/new_poi_text"
        android:text="@string/new_poi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginRight="15dip"
        android:hint="Name"
        android:layout_below="@+id/new_poi_text"/>
    <EditText
        android:id="@+id/visited_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginRight="15dip"
        android:hint="Place to visit"
        android:layout_below="@+id/name"/>
    <EditText
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginRight="15dip"
        android:hint="Longitude"
        android:layout_below="@id/visited_place"/>
    <EditText
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginRight="15dip"
        android:hint="Latitude"
        android:layout_below="@id/longitude"/>
    <EditText
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginRight="15dp"
        android:hint="Altitude"
        android:layout_toRightOf="@id/name"
        android:layout_below="@id/new_poi_text"/>
    <EditText
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginRight="15dip"
        android:hint="Heading"
        android:layout_below="@id/altitude"
        android:layout_toRightOf="@+id/visited_place"/>
    <EditText
        android:id="@+id/tilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginRight="15dip"
        android:hint="Tilt"
        android:layout_below="@id/heading"
        android:layout_toRightOf="@id/longitude"/>
    <EditText
        android:id="@+id/range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginRight="15dip"
        android:hint="Range"
        android:layout_below="@id/tilt"
        android:layout_toRightOf="@+id/latitude"/>
    <EditText
        android:id="@+id/altitudeMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:hint="Altitude Mode"
        android:layout_toRightOf="@id/altitude"
        android:layout_below="@id/new_poi_text"/>
    <EditText
        android:id="@+id/poi_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:hint="Hide (Y/N)"
        android:layout_below="@id/altitudeMode"
        android:layout_toRightOf="@id/heading"/>
    <Spinner
        android:id="@+id/categoryID_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/poi_hide"
        android:layout_toRightOf="@+id/tilt"/>
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_check_white_24dp"
        android:id="@+id/create_poi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_poi"
        android:layout_below="@id/categoryID_spinner"
        app:backgroundTint="@color/green"
        android:layout_toRightOf="@id/poi_hide"/>
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_check_white_24dp"
        android:id="@+id/update_poi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_poi"
        android:layout_below="@id/categoryID_spinner"
        android:layout_toRightOf="@id/poi_hide"
        app:backgroundTint="@color/green"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_close_white_24dp"
        android:id="@+id/cancel_come_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:backgroundTint="@color/red"
        android:text="@string/cancel"/>

</RelativeLayout>
